- provide :title, 'Channels'

table
  thead
    tr
      th style='width: 5rem'
      th style='font-size: 1.5rem' Channel
      th style='font-size: 1.5rem' Manager

  tbody
    - for channel in nav_channels
      tr
        td.avatar
          = link_to avatar_for_channel(channel), channel_path(channel.slug)
        td
          strong = link_to channel.name, channel_path(channel.slug),
                   style: 'color: ' +  channel.color + '; font-size: 1.25rem'
        td.author
          .avatar = link_to avatar_for_user(channel.user), user_path(channel.user.username)
          .username = link_to '@' + channel.user.username, user_path(channel.user.username)
